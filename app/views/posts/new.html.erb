<h1>New Post</h1>

<%= form_for(@post) do |f| %>

  <div class="field">
    <%= f.label :title, 'Title:' %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :category_id, 'Category:' %><br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
      <%= categories_fields.text_field :name %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :content, 'Content:' %><br>
    <%= f.text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>