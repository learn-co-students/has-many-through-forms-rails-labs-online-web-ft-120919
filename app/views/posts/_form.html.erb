<%= form_for @post do |f| %>
  <%= f.label :title, 'Post Title' %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content, 'Post Content' %>
  <%= f.text_area :content %>
  <br>
  <%= f.label :category_ids %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <br>
  <%= f.fields_for :categories, @post.categories.build do |inner_form| %>
    <%= inner_form.label :name, 'New Category' %>
    <%= inner_form.text_field :name %>
  <% end %>
  <br>
  <%= f.submit %>

<% end %>
