<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
   <%= f.label :content %>
   <%= f.text_field :content %>
  </div>
  <div>
   <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  </div>
  <div>
    <%= f.fields_for :categories, @post.categories.build do |c| %>
      <%= c.label :name, "New Category Name" %>
      <%= c.text_field :name %>
    <% end %>
  </div>
  <div>
    <%= f.submit %>  
  </div>
<% end %>