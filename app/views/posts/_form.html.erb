
<%= form_for @post do |f| %>
  <%= f.label "Title" %><br>
  <%= f.text_field :title %><br>
  <%= f.label "Content" %><br>
  <%= f.text_area :content %><br><br>
  <%= f.label "Categories: " %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>
  <%= f.label "New Category" %><br>
  <%= f.fields_for :categories, @post.categories.build do |new_category| %>
   <%= new_category.text_field :name %>
  <% end %><br><br>
  <%= f.submit %>
<% end %>